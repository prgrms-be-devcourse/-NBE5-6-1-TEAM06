<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grepp.spring.app.model.order.OrderRepository">
  <resultMap id="orderMap" type="com.grepp.spring.app.model.order.dto.OrderDto">
    <id property="orderId" column="order_id"/>
    <collection property="orderItemDto" ofType="com.grepp.spring.app.model.order.dto.orderItemDto"
      column="order_id" select="selectOrderItemDtoByOrderId"/>
  </resultMap>

  <select id="selectAll" resultMap="orderMap">
    select * from order
  </select>

  <select id="selectOrderItemDtoByOrderId" parameterType="int" resultType="com.grepp.spring.app.model.order.dto.OrderItemDto">
    select * from order_details_id where order_id = #{orderId}
  </select>

</mapper>