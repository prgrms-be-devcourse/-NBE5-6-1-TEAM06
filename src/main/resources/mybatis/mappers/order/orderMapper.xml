<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper

  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.grepp.spring.app.model.order.OrderRepository">

  <resultMap id="orderMap" type="com.grepp.spring.app.model.order.dto.OrderDto">
    <id property="orderId" column="order_id"/>
    <collection property="items" ofType="com.grepp.spring.app.model.order.dto.orderItemDto"
      column="order_id" select="selectOrderItemDtoByOrderId"/>
  </resultMap>

  <select id="selectAll" resultMap="orderMap">
    select * from `order`
  </select>

  <select id="selectOrderItemDtoByOrderId" resultType="com.grepp.spring.app.model.order.dto.OrderItemDto">
    SELECT
    order_details_id AS orderDetailsId,
    order_id,
    product_id,
    order_cnt,
    product_price
    FROM order_details
    WHERE order_id = #{orderId}
  </select>


  <!-- 주문 삭제 -->
  <delete id="deleteOrderDetails">
    DELETE FROM order_details WHERE order_id = #{orderId}
  </delete>


  <delete id="deleteOrder">
    DELETE FROM `order` WHERE order_id = #{orderId}
  </delete>


<!--  <delete id="deleteOrder">-->
<!--    DELETE FROM orders WHERE ORDER_ID = #{cartId}-->
<!--  </delete>-->

</mapper>
